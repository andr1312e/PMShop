<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          asp-href-include="/lib/bootstrap/dist/**/*.min.css"
          asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <title>Лучший магазин</title>
</head>
<body>
<div class="navbar navbar-inverse bg-inverse" role="navigation">
    <div class="row">
        <a class="col navbar-brand" href="Page1">Сувенирная лавка ПМ</a>
        <div class="col-4 text-right">
            @await Component.InvokeAsync("CartSummary")
        </div>
    </div>
</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col-9">
        @RenderBody()
    </div>
</div>

<div class="text-center">
    <a class="btn btn-primary" asp-action="Index" asp-controller="Admin">
        Панель админа
    </a>
    <a class="btn btn-primary" asp-action="List" asp-controller="Order">
        Все заказы
    </a>
</div>
</body>
</html>
